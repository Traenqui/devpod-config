
# tinkering
alias dzs='source ~/.zshenv && echo "Reloaded $HOME/.zshenv!"'
alias dzD='setopt XTRACE && echo "DEBUG ENABLED" && dzs'
alias dzd='unsetopt XTRACE && dzs'

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Networking
alias ipa="ip addr show"

# Process management
alias psa="ps aux"
alias psg="ps aux | grep"

# listing
alias ls='eza --icons -F -H --group-directories-first --git -1'                  # ls
alias l='eza -lbF --git --icons'                                                 # list, size, type, git
alias ll='eza -lbGF --git --icons'                                               # long list
alias la='eza -lbhHigUmuSa --time-style=long-iso --git --color-scale --icons'    # all list
alias lx='eza -lbhHigUmuSa@ --time-style=long-iso --git --color-scale --icons'   # all + extended list
alias lS='eza -1 --icons'                                                        # one column, just names
alias lt='eza --tree --level=2 --icons'                                          # tree

# folders
alias conf="$HOME/repos/config"
alias work="$HOME/repos/work"

# loades the neovim config form this repo instad of the default location
# alias nvim='XDG_CONFIG_HOME="$HOME/repos/config" nvim'
alias nvim='XDG_CONFIG_HOME="/workspaces/dotpod/" nvim'
alias vim='nvim'
alias vi='nvim'
